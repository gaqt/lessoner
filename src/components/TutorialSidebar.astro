---

type entry = {
    name: string,
    href: string,
}

type section = {
    name: string,
    entries: entry[],
}

type topic = {
    name: string,
    sections: section[],
}

interface Props {
    tutorialName: string,
    topics: topic[],
}

const { topics, tutorialName } = Astro.props
---

<div class="lg:border-e-4 lg:border-e-fuchsia-600 p-5 lg:max-w-80">
    <h2 class="text-2xl">{tutorialName}</h2>
    <hr><br>
    {topics.map(topic => (
    <Fragment>
        <h3 class="text-xl font-bold">{topic.name}</h3>
        {topic.sections.map(section => (
        <div class="ps-3 mt-4">
            <a href={section.entries[0]?.href}><h4 class="text-lg">{section.name}</h4></a>
            {section.entries.map(entry => (
            <a class="text-sm ps-3 block mt-1" href={entry.href}>{entry.name}</a>
            ))}
        </div>
        ))}
    </Fragment>
    ))}
</div>
