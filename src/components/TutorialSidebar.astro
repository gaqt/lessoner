---

type entry = {
    name: string,
    href: string,
}

type topic = {
    name: string,
    entries: entry[],
}

interface Props {
    tutorialName: string,
    topics: topic[],
}

const { topics, tutorialName } = Astro.props
---

<div class="lg:border-e-4 lg:border-e-fuchsia-600 p-5 lg:max-w-80">
    <h2 class="text-lg">{tutorialName}</h2>
    <hr><br>
   {topics.map(topic => (
    <h3 class="text-base">{topic.name}</h3>
    <hr>
    <ul>
        {topic.entries.map(entry => (
        <li><a class="text-sm ps-4" href={entry.href}>{entry.name}</a></li>
        ))}
    </ul>
    ))}
</div>
