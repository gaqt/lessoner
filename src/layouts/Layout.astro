---
import TutorialSidebar from "../components/TutorialSidebar.astro"
interface Props {
	title: string,
}
const topics = [
	{
		'name': 'Parte 1 - Lógica de Programação',
		'sections': [
			{
				'name': 'Introdução',
				'entries': [
					{'name': 'Configurando o Ambiente', 'href': '/p1/intro/configurando-o-ambiente'},
					{'name': 'Output no Console', 'href': '/p1/intro/output-no-console'},
					{'name': 'Variáveis e Tipos', 'href': '/p1/intro/variaveis'},
					{'name': 'Input do Console', 'href': '/p1/intro/input-do-console'},
					{'name': 'Adendo: cin e cout', 'href': '/p1/intro/cin-e-cout'},
					{'name': 'If e Else', 'href': '/p1/intro/if-else'},
				]
			},
		]
	}
]

const tutorialName = "Lessoner :3"

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="lessoner thingy" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans">
		<header class="bg-fuchsia-600 text-white p-3">
			<a href="/"><h1 class="text-3xl font-bold">Lessoner</h1></a>
		</header>
		<main>
			<div class="flex flex-col-reverse lg:flex-row gap-4 mt-4">
				<TutorialSidebar topics={topics} tutorialName={tutorialName} />
					<div class="max-w-4xl px-3">
					<slot />
				</div>
			</div>
			<div class="min-h-60" />
		</main>
	</body>
</html>
