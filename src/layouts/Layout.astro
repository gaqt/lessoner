---
import TutorialSidebar from "../components/TutorialSidebar.astro"
interface Props {
	title: string;
}
const topics = [
	{
		'name': 'topicA',
		'entries': [
			{'name': 'a1', 'href': 'ha1'},
			{'name': 'a2', 'href': 'ha2'},
			{'name': 'a3', 'href': 'ha3'},
		]
	}, {
		'name': 'topicB',
		'entries': [
			{'name': 'a1', 'href': 'ha1'},
			{'name': 'a2', 'href': 'ha2'},
			{'name': 'a3', 'href': 'ha3'},
		]
	}
]

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="lessoner thingy" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans">
		<header class="bg-fuchsia-600 text-white p-3">
			<h1 class="text-3xl font-bold">Lessoner</h1>
		</header>
		<main class="flex flex-row gap-4 mt-4">
			<TutorialSidebar topics={topics} tutorialName="tutorial" />
			<slot />
		</main>
	</body>
</html>
